---

<Base titre="Offres">
    <h1>Vous trouverez vos offres</h1>

    <div>
        {
            offres.map((offre) => (
                <div>
                    <ul>
                        <li>{offre.adresse}</li>
                        <li>{offre.favori}</li>
                        <li>{offre.id}</li>
                        <li>{offre.nbChambres} chambres</li>
                        <li>{offre.nbSdb} salles de bain</li>
                        <li>{offre.nomMaison}</li>
                        <li>{offre.prix} €</li>
                        <li>{offre.surface} m²</li>
                        <img src={offre.imgUrl} alt={offre.nomMaison} />
                    </ul>
                </div>
            ))
        }
    </div>
</Base>
